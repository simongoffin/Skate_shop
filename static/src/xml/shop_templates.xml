<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="MyTemplate">
        <div class="shop_homepage">
            <p>Hello <t t-esc="widget.name"/>!</p>
            <p class="rpc_request">
                <button type="button" class="ici">Request</button>
                <main>
                    <div data-oe-id="283">OK!</div>
                </main>
            </p>
        </div>
        <div>
            <t t-foreach="widget.products" t-as="product">
                <span class="products_item">
                    <t t-esc="product"/>
                </span>
                <br/>
            </t>
        </div>
    </t>
</templates>